# Suggesged to Place under Quick Open  PATTERN: /usr/local/bin/guake_quick_open_file_opener %(file_path)s:%(line_number)s

echo "You cliked: ${@}"
if [ -d ./.idea/ ] || [ -d .idea/ ] || [ -d ../.idea/ ] || [ -d ../../.idea/ ] || [ -d ../../../.idea/ ] || [ -d ../../../../.idea/ ] ; then
{
     mine ${@}
    if [ -f ./Gemfile.lock ] || [ -f Gemfile.lock ] || [ -f ../Gemfile.lock ] || [ -f ../../Gemfile.lock ] || [ -f ../../../Gemfile.lock ] || [ -f ../../../../Gemfile.lock ] ; then
    {
        mine ${@}
    } else {
        echo "Could not identify how to start"
        webstorm ${@}
        code ${@}
    }
    fi
} 
else 
{
    code ${@}
}
fi 

